generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgres://cosmo:123@localhost:5432/cosmo"
}

model User {
  id       String @id @unique @default(uuid())
  name     String
  email    String
  password String
  image    Image?

  @@map("users")
}

model Image {
  id       String  @id @default(uuid())
  url      String
  archived Boolean @default(true)
  user     User?   @relation(fields: [userId], references: [id])
  userId   String? @unique @map("user_id")

  @@map("images")
}
